<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net6.0</TargetFrameworks>
    <PackageTags>process-supervision, child-process</PackageTags>
    <Description>A utility to assist with spawing child processes, monitor their lifecycle and co-operative shutdown.</Description>
    <!-- Source Link -->
    <AllowedOutputExtensionsInPackageBuildOutputFolder>$(AllowedOutputExtensionsInPackageBuildOutputFolder);.pdb</AllowedOutputExtensionsInPackageBuildOutputFolder>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="6.0.3" />
    <PackageReference Include="Stateless" Version="5.13.0" />
  </ItemGroup>

</Project>
