<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net6.0;net7.0</TargetFrameworks>
    <AssemblyName>Logicality.LittleForker</AssemblyName>
    <RootNamespace>Logicality.LittleForker</RootNamespace>
    <PackageTags>process-supervision, child-process</PackageTags>
    <Description>A utility to assist with spawing child processes, monitor their lifecycle and co-operative shutdown.</Description>
    <!-- Source Link -->
    <AllowedOutputExtensionsInPackageBuildOutputFolder>$(AllowedOutputExtensionsInPackageBuildOutputFolder);.pdb</AllowedOutputExtensionsInPackageBuildOutputFolder>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="$(FrameworkVersion)" />
    <PackageReference Include="Microsoft.Extensions.Hosting.Abstractions" Version="$(FrameworkVersion)" />
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="$(FrameworkVersion)" />
    <PackageReference Include="Stateless" Version="5.13.0" />
  </ItemGroup>

  <ItemGroup>
    <InternalsVisibleTo Include="LittleForker.Tests" />
  </ItemGroup>

</Project>
